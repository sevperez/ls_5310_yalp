- unless review.content.blank?
  %li.border.border-top-0.border-right-0.border-left-0.py-3
    .d-inline-block
      = link_to review.user.full_name, "#", class: "mb-0 primary-link d-block"
      %small.text-secondary= format_datetime(review.created_at)
      %p.lead.mb-0
        - review.stars.times do
          %i.fa.fa-star.mr-2.text-star-gold
    .d-inline-block.align-top
      %p= review.content
