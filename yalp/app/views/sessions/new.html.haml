%section.col-lg-5.col-md-7.col-sm-10.mx-auto
  = render "shared/messages"
  %p.lead
    %i.fa.fa-sign-in.mr-2(area-hidden="true")
    Sign in
  #sign_in_form.border.rounded.bg-light.p-3
    = bootstrap_form_tag url: "/sign_in" do |f|
      .form-row
        .form-group.col-12.mb-0
          = f.email_field :email, placeholder: "Email Address"
      .form-row
        .form-group.col-12.mb-0
          = f.password_field :password, placeholder: "Password"
      = submit_tag "Submit", class: "btn primary-btn"
